<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sample Approval Categories -->
        <record id="category_leave_request" model="approval.category">
            <field name="name">Leave Request</field>
            <field name="description">Annual leave, sick leave, and other time-off requests</field>
            <field name="approval_type">manager</field>
            <field name="sequence">10</field>
            <field name="has_date">True</field>
            <field name="has_period">True</field>
            <field name="has_amount">False</field>
            <field name="manager_approval">True</field>
            <field name="color">2</field>
            <field name="approver_ids" eval="[(6, 0, [ref('base.user_admin')])]"/>
        </record>

        <record id="category_expense_reimbursement" model="approval.category">
            <field name="name">Expense Reimbursement</field>
            <field name="description">Business expense reimbursement requests</field>
            <field name="approval_type">finance</field>
            <field name="sequence">20</field>
            <field name="has_date">True</field>
            <field name="has_period">False</field>
            <field name="has_amount">True</field>
            <field name="manager_approval">True</field>
            <field name="color">5</field>
            <field name="approver_ids" eval="[(6, 0, [ref('base.user_admin')])]"/>
        </record>

        <record id="category_equipment_request" model="approval.category">
            <field name="name">Equipment Request</field>
            <field name="description">IT equipment and office supplies requests</field>
            <field name="approval_type">hr</field>
            <field name="sequence">30</field>
            <field name="has_date">True</field>
            <field name="has_period">False</field>
            <field name="has_amount">True</field>
            <field name="manager_approval">False</field>
            <field name="color">8</field>
            <field name="approver_ids" eval="[(6, 0, [ref('base.user_admin')])]"/>
        </record>

        <record id="category_training_request" model="approval.category">
            <field name="name">Training Request</field>
            <field name="description">Professional development and training course requests</field>
            <field name="approval_type">hr</field>
            <field name="sequence">40</field>
            <field name="has_date">True</field>
            <field name="has_period">True</field>
            <field name="has_amount">True</field>
            <field name="manager_approval">True</field>
            <field name="color">3</field>
            <field name="approver_ids" eval="[(6, 0, [ref('base.user_admin')])]"/>
        </record>

        <!-- Sample Approval Requests -->
        <record id="request_demo_1" model="approval.request">
            <field name="name">Annual Leave - Summer Vacation</field>
            <field name="category_id" ref="category_leave_request"/>
            <field name="request_owner_id" ref="base.user_admin"/>
            <field name="reason">Planning summer vacation with family. Will ensure all projects are completed before departure.</field>
            <field name="date_start">2025-07-15</field>
            <field name="date_end">2025-07-25</field>
            <field name="state">approved</field>
            <field name="priority">1</field>
            <field name="approved_by" ref="base.user_admin"/>
            <field name="approval_date">2025-06-01 10:30:00</field>
            <field name="approval_comment">Approved. Please coordinate with team for project handover.</field>
            <field name="request_date">2025-05-15 09:00:00</field>
        </record>

        <record id="request_demo_2" model="approval.request">
            <field name="name">Expense Reimbursement - Client Meeting</field>
            <field name="category_id" ref="category_expense_reimbursement"/>
            <field name="request_owner_id" ref="base.user_admin"/>
            <field name="reason">Business lunch with potential client. Discussed new project opportunities.</field>
            <field name="date_start">2025-02-10</field>
            <field name="amount">85000</field>
            <field name="state">approved</field>
            <field name="priority">1</field>
            <field name="approved_by" ref="base.user_admin"/>
            <field name="approval_date">2025-02-12 14:15:00</field>
            <field name="approval_comment">Approved. Please attach receipts for processing.</field>
            <field name="request_date">2025-02-11 16:45:00</field>
        </record>

        <record id="request_demo_3" model="approval.request">
            <field name="name">Equipment Request - New Laptop</field>
            <field name="category_id" ref="category_equipment_request"/>
            <field name="request_owner_id" ref="base.user_admin"/>
            <field name="reason">Current laptop is 4 years old and experiencing performance issues. Need upgrade for development work.</field>
            <field name="date_start">2025-03-01</field>
            <field name="amount">1500000</field>
            <field name="state">pending</field>
            <field name="priority">2</field>
            <field name="request_date">2025-02-20 11:20:00</field>
        </record>

        <record id="request_demo_4" model="approval.request">
            <field name="name">Training Request - Python Certification</field>
            <field name="category_id" ref="category_training_request"/>
            <field name="request_owner_id" ref="base.user_admin"/>
            <field name="reason">Want to obtain Python certification to improve technical skills and contribute more to development projects.</field>
            <field name="date_start">2025-04-01</field>
            <field name="date_end">2025-04-30</field>
            <field name="amount">350000</field>
            <field name="state">new</field>
            <field name="priority">1</field>
            <field name="request_date">2025-03-01 08:30:00</field>
        </record>

        <record id="request_demo_5" model="approval.request">
            <field name="name">Sick Leave - Medical Appointment</field>
            <field name="category_id" ref="category_leave_request"/>
            <field name="request_owner_id" ref="base.user_admin"/>
            <field name="reason">Scheduled medical check-up and follow-up appointments.</field>
            <field name="date_start">2025-03-15</field>
            <field name="date_end">2025-03-16</field>
            <field name="state">refused</field>
            <field name="priority">2</field>
            <field name="refused_by" ref="base.user_admin"/>
            <field name="approval_date">2025-03-10 13:45:00</field>
            <field name="refusal_reason">Please reschedule to avoid conflict with important project deadline.</field>
            <field name="request_date">2025-03-08 15:20:00</field>
        </record>
    </data>
</odoo>
